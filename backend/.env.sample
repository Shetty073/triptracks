# Security
# Replace this with a long, random string (e.g., generated via `openssl rand -hex 32`)
SECRET_KEY=your_super_secret_jwt_key_here

# JWT Configuration
# Algorithm used for signing the JWT tokens
ALGORITHM=HS256
# Expiration times for tokens
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - MongoDB
# Local development URL, or replace with MongoDB Atlas URI: mongodb+srv://<user>:<password>@cluster0...
MONGODB_URL=mongodb://localhost:27017
# Name of the database to use within the MongoDB cluster
MONGODB_DB_NAME=triptracks

# Geomaps Integration
# API key for the external location and routing services (geomaps-sdk)
GEOMAPS_API_KEY=your_geomaps_api_key_here

# Caching Services
# Connection string to the Memcached instance used by the trip planner service
MEMCACHED_SERVER=localhost:11211
